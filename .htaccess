# Protección de archivos sensibles
<Files "config/database.php">
    Order allow,deny
    Deny from all
</Files>

<Files "includes/functions.php">
    Order allow,deny
    Deny from all
</Files>

# Prevenir listado de directorios
Options -Indexes

# Protección contra acceso directo a archivos PHP de configuración
<FilesMatch "^(database\.php|functions\.php)$">
    Order allow,deny
    Deny from all
</FilesMatch>

